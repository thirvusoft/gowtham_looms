 "css": ".main{\n    width:100%;\n    font-family: \"Times New Roman\", Times, serif;\n\n    \n  /*  opacity: 0.5;*/\n  /*z-index: 0;*/\n  /*background-image: url(\"/files/GL%20Top%20Frame%20Logo.PNG\");*/\n  /*background-repeat:no-repeat;*/\n  /*background-size: 50% 50%;*/\n  /*background-position:center;*/\n}\n.body {\n    padding-top:36%;\n    padding-left:3%;\n    position: fixed;\n    width: 150%;\n    opacity: 0.1;\n  background-repeat:no-repeat;\n  background-attachment: fixed;\n\n    }\n.logoanddetails{\n    width:100%;\n    overflow:hidden;\n    text-transform: uppercase;\n    height:150;\n}\n\n.logo{\n    float:left;\n}\n\n.address{\n    float:left;\n    padding-left:80px;\n    text-transform: uppercase;\n    margin-top: 10px;\n    font-size:16px;\n    text-align:center;\n    \n}\n\n.contactandmail{\n    overflow:hidden;\n}\n\n.contactdetails{\n    margin-left:0px;\n    width:50%;\n    text-transform: uppercase;\n    float:left;\n    white-space: nowrap;\n}\n\n.maildetails{\n    float:right;\n    width:50%;\n    white-space: nowrap;\n}\n\n.table1{\n   border: 1px solid black;\n   border-bottom: 0 !important;\n   overflow:hidden;\n   text-align:left;\n   text-transform: uppercase;\n   \n    \n}\n\n.table2{\n   border: 1px solid black;\n    border-bottom: 0 !important;\n    text-transform: uppercase;\n  overflow:hidden;\n}\n\n.table3{\n   border: 1px solid black;\n    overflow:hidden;\n    text-transform: uppercase;\n\n}\n.table1a{\n    margin-left:0px;\n    float:left;\n    text-transform: uppercase;\n    width:50%;\n}\n\n.table2a{\n    margin-left:0px;\n    text-transform: uppercase;\n    float:left;\n    width:50%;\n    border-bottom: 0 !important;\n}\n\n.table3a{\n    margin-left:0px;\n    text-transform: uppercase;\n    float:left;\n    width:50%;\n    border-top: 0 !important;\n    border-bottom: 0 !important;\n}\n.table1b{\n    margin-left:0px;\n    float:left;\n    text-transform: uppercase;\n    width:50%;\n    /*border: 1px solid black;*/\n    border-right: 0 !important;\n    border-bottom: 0 !important;\n    border-top: 0 !important;\n \n}\n\n.table3b{\n    margin-left:0px;\n    float:left;\n    text-transform: uppercase;\n    width:50%;\n    border: 1px solid black;\n    border-right: 0 !important;\n    border-left: 0 !important;\n    border-top: 0 !important;\n    border-bottom: 0 !important;\n\n}\n.table4{\n    border:1px solid black;\n    border-top:0px;\n    text-transform: uppercase;\n    border-right:0px;\n}\n\n.table4 td{\n        border-right:1px solid black;\n        border-bottom:1px solid black;\n        text-transform: uppercase;\n}\n.table5{\n    border:1px solid black;\n    border-top:0px;\n    \n\n}\n",
